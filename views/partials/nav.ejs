      <% if(user._id){ %>
      <a href="/main/<%= user._id %>">Профиль</a>
      <% } else { %>
      <a href="/link">
        <button class="btn-custom">Регистрация</button>
      </a>
      <a href="/sign">
        <button class="btn-custom">Вход</button>
      </a>
      <% } %>
    </div>
  </nav>
