<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Document</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="sign-in-container">
      <h1 class="sign-in-title">Вход</h1>
      <form action="/api/signin" method="post">
        <div>
          <input
            class="inp inp-sign-in"
            type="email"
            placeholder="Введите email"
            name="email"
          />
          <br />
          <input
            class="inp inp-sign-in"
            type="password"
            placeholder="Введите пароль"
            name="password"
          />
          <br />
          <button type="submit" class="btn-custom btn-sign-in">Войти</button>
        </div>
      </form>
    </div>
  </body>
</html>
